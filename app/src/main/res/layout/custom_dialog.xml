<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_15sdp"
    android:background="@drawable/light_gray_border"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/_23sdp"
        android:layout_height="@dimen/_23sdp"
        android:layout_gravity="end"
        android:layout_margin="@dimen/_13sdp"
        android:src="@drawable/close"
        android:visibility="invisible"
        app:tint="@color/darkGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivClose"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_15sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_75sdp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/quotation" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_25sdp"
            android:fontFamily="@font/semibold"
            android:text="Quotation created successfully!!"
            android:textColor="@color/green"
            android:textSize="@dimen/_14sdp" />

        <Button
            android:id="@+id/btnSubmit"
            style="@style/buttonAccentRegular"
            android:layout_width="@dimen/_125sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="Send Quotation" />

        <Button
            android:id="@+id/btnCancel"
            style="@style/buttonPrimaryRegular"
            android:layout_width="@dimen/_125sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="Close" />

    </LinearLayout>

</LinearLayout>